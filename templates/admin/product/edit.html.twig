{% extends 'base.html.twig' %}

{% block body  %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Edit product</h1>
        </div>
        <hr>
    </div>
    <div class="col-12">
        <form action="{{ path('admin_update_products', {product: product.id}) }}" method="post">
            <div class="form-group">
                <label>Name of product</label>
                <input type="text" class="form-control" name="name" value="{{ product.name }}">
            </div>

            <div class="form-group">
                <label>description</label>
                <input type="text" class="form-control" name="description" value="{{ product.description }}">
            </div>

            <div class="form-group">
                <label>Content/Information</label>
                <textarea class="form-control" name="body">{{ product.body }}</textarea>
            </div>

            <div class="form-group">
                <label>Slug</label>
                <input type="text" class="form-control" name="slug" value="{{ product.slug }}">
            </div>

            <div class="form-group">
                <label>Price</label>
                <input type="text" class="form-control" name="price"  value="{{ product.price }}">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-success">Update product</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}