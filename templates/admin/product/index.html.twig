{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Products</h1>
            <a href="{{ path('admin_create_products') }}" class="btn btn-success">Create product</a>
        </div>
    </div>
    <div class="col-12">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.createdAt|date('d/m/Y H:i:s') }}</td>
                    <td>
                        <a href="{{ path('admin_edit_products', {product: product.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                        <a href="{{ path('admin_remove_products', {product: product.id}) }}" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
